{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-compose-up",
            "type": "shell",
            "command": "docker compose --file ./docker-compose.yaml --file ./docker-compose-debug.yaml up --build --detach",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "DEBUG": "true"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "docker-compose-stop",
            "type": "shell",
            "command": "docker compose stop",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}